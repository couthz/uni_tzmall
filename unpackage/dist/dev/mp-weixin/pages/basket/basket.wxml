<wxs src="../../wxs/number.wxs" module="wxs"></wxs>
<view class="container"><view class="prod-list"><view class="prod-block"><block wx:if="{{chooseDiscountItemDto}}"><view class="discount-tips"><text class="text-block">{{wxs.parseDiscount(chooseDiscountItemDto.discountRule)}}</text><text class="text-list">{{wxs.parseDiscountMsg(chooseDiscountItemDto.discountRule,chooseDiscountItemDto.needAmount,chooseDiscountItemDto.discount)}}</text></view></block></view><block wx:for="{{$root.l0}}" wx:for-item="prod" wx:for-index="index" wx:key="index"><block><view class="item"><view class="btn"><label><checkbox data-index="{{index}}" value="{{prod.m0}}" checked="{{prod.$orig.checked}}" color="#105c3e" data-event-opts="{{[['tap',[['onSelectedItem',['$event']]]]]}}" bindtap="__e"></checkbox></label></view><view class="prodinfo"><view class="pic"><image src="{{prod.$orig.pic}}"></image></view><view class="opt"><view class="prod-name">{{prod.$orig.sku.prodName}}</view><text class="{{['prod-info-text '+(prod.$orig.sku.skuName?'':'empty-n')]}}">{{prod.$orig.sku.skuName}}</text><view class="price-count"><view class="price"><text class="symbol">￥</text><text class="big-num">{{prod.$orig.sku.price}}</text></view><view class="m-numSelector"><view class="minus" data-index="{{index}}" data-event-opts="{{[['tap',[['onCountMinus',['$event']]]]]}}" bindtap="__e"></view><input type="number" disabled="{{true}}" value="{{prod.$orig.itemCount}}"/><view class="plus" data-scindex="{{scIndex}}" data-index="{{index}}" data-event-opts="{{[['tap',[['onCountPlus',['$event']]]]]}}" bindtap="__e"></view></view></view></view></view></view></block></block></view><block wx:if="{{$root.g0==0}}"><view class="empty"><view class="img"><image src="/static/images/tabbar/basket.png"></image></view><view class="txt">您还没有添加任何商品哦~</view></view></block><block wx:if="{{$root.g1>0}}"><view class="cart-footer"><view class="btn all"><label data-event-opts="{{[['tap',[['onSelAll',['$event']]]]]}}" bindtap="__e"><checkbox checked="{{allChecked}}" color="#f7d731;"></checkbox>全选</label></view><view data-event-opts="{{[['tap',[['onDelBasket',['$event']]]]]}}" class="btn del" bindtap="__e"><text>删除</text></view><view class="btn total"><view class="finally"><text>合计:</text><view class="price"><text class="symbol">￥</text><text class="big-num">{{totalMoney}}</text></view></view><block wx:if="{{subtractMoney>0}}"><view class="total-msg">{{'总额:￥'+wxs.toPrice(totalMoney)+" 立减:￥"+wxs.toPrice(subtractMoney)+''}}</view></block></view><view data-event-opts="{{[['tap',[['toFirmOrder',['$event']]]]]}}" class="btn settle" bindtap="__e"><text>结算</text></view></view></block></view>