page {
  background-color: #f4f4f4;
}
.container {
  height: 100vh;
  padding: 15rpx;
}
.container scroll-view {
  height: 100%;
}
.container .timeline {
  padding-left: 20rpx;
  background-color: white;
}
.container .timeline .tripItem .preTitle {
  font-size: 28rpx;
}
.container .timeline .tripItem .curTitle {
  color: #ff6500;
  font-weight: 800;
}
.container .timeline .tripItem .nextTitle {
  font-size: 28rpx;
  color: #828282;
}
.container .timeline .tripItem .tips {
  font-size: 26rpx;
  line-height: 170%;
  white-space: pre-line;
  color: #828282;
}
.container .timeline .end-node-hint {
  display: flex;
  align-items: center;
  color: #ff6500;
}
.container .timeline .end-node-hint .end-node-price {
  display: flex;
  margin-left: auto;
}
.container .return-info {
  margin-top: 15rpx;
  background-color: white;
  padding: 30rpx;
  font-size: 28rpx;
}
.container .return-info .consignee-info .consignee-iden {
  display: flex;
  align-items: baseline;
}
.container .return-info .consignee-info .consignee-iden .consignee-name {
  font-weight: 800;
}
.container .return-info .consignee-info .consignee-iden .consignee-phone {
  margin-left: 10rpx;
  font-size: 26rpx;
  color: #828282;
}
.container .return-info .consignee-info .consignee-addr {
  font-size: 26rpx;
  margin-top: 10rpx;
}
.container .return-info .delivery-info {
  margin-top: 30rpx;
  display: flex;
  align-items: center;
}
.container .return-info .delivery-info .delivery-title .delivery-title-title {
  font-weight: 800;
}
.container .return-info .delivery-info .delivery-title .delivery-title-hint {
  padding-top: 10rpx;
  font-size: 26rpx;
  color: #828282;
}
.container .return-info .delivery-info .delivery-button {
  margin-left: auto;
}
.container .aftersale-info {
  margin-top: 15rpx;
  background-color: white;
  padding: 30rpx;
}
.container .aftersale-info .aftersale-title {
  font-size: 30rpx;
  margin-bottom: 20rpx;
  font-weight: 800;
}
.container .aftersale-info .prod-info {
  display: flex;
}
.container .aftersale-info .prod-info .pic {
  position: relative;
  text-align: center;
  width: 150rpx;
  height: 150rpx;
}
.container .aftersale-info .prod-info .pic image {
  max-width: 100%;
  max-height: 100%;
  border-radius: 8rpx;
  vertical-align: middle;
}
.container .aftersale-info .prod-info .pic .prod-status {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  font-size: 28rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  border-radius: 8rpx;
}
.container .aftersale-info .prod-info .opt {
  font-size: 28rpx;
  line-height: 180%;
  margin-left: 30rpx;
}
.container .aftersale-info .prod-info .opt .properties {
  color: grey;
}
.container .aftersale-info .prod-info .opt .properties .size {
  margin-left: 30rpx;
}
.container .aftersale-info .prod-info .opt .price-count .price-symbol {
  margin-left: 30rpx;
}
.container .aftersale-info .aftersale-item {
  display: flex;
  font-size: 28rpx;
  margin-top: 30rpx;
}
.container .aftersale-info .aftersale-item .aftersale-item-content {
  margin-left: auto;
  color: #828282;
}

