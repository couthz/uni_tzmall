page {
  background-color: #f4f4f4;
}
.input-with-text-align-right {
  text-align: right;
}
.container {
  height: 100vh;
  padding-bottom: 100rpx;
}
.container scroll-view {
  height: 100%;
}
.container .title {
  font-weight: 800;
  text-align: center;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}
.container .prod-list {
  font-size: 28rpx;
}
.container .prod-list .item {
  padding: 20rpx;
  background: #fff;
  display: flex;
  align-items: center;
}
.container .prod-list .item .prod-info {
  display: flex;
}
.container .prod-list .item .prod-info .pic {
  text-align: center;
  width: 150rpx;
  height: 150rpx;
}
.container .prod-list .item .prod-info .pic image {
  max-width: 100%;
  max-height: 100%;
  border-radius: 8rpx;
  vertical-align: middle;
}
.container .prod-list .item .prod-info .opt {
  line-height: 180%;
  margin-left: 30rpx;
}
.container .prod-list .item .prod-info .opt .properties {
  color: grey;
}
.container .prod-list .item .prod-info .opt .properties .size {
  margin-left: 30rpx;
}
.container .prod-list .item .prod-info .opt .price-count .price-symbol {
  margin-left: 30rpx;
}
.container .prod-list .refund-item {
  padding-left: 20rpx;
  white-space: nowrap;
  /* 防止文字换行 */
}
.container .prod-list .refund-item .flex-container {
  display: flex;
  align-items: center;
  padding-right: 10rpx;
}
.container .prod-list .refund-item .flex-container .refund-input-left {
  padding-left: 0;
  text-align: left;
}
.container .prod-list .refund-item .refund-input {
  text-align: right;
}
.container .prod-list .refund-field {
  padding: 30rpx;
  background: #fff;
  align-items: center;
}
.container .prod-list .refund-field .refund-price {
  margin-left: 20rpx;
  display: flex;
  align-items: center;
}
.container .prod-list .refund-field .refund-price .refund-price-label {
  margin-right: 10rpx;
}
.container .prod-list .refund-field .refund-content {
  color: gray;
  margin-left: auto;
  display: flex;
  align-items: center;
}
.container .prod-list .refund-field .refund-content .price-input {
  width: 130rpx;
}
.container .next-step {
  position: absolute;
  bottom: 0;
  width: 100%;
}

