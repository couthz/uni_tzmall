page {
  background-color: #f4f4f4;
}
.container {
  height: 100vh;
  padding-bottom: 100rpx;
}
.container scroll-view {
  height: 100%;
}
.container .title {
  font-weight: 800;
  text-align: center;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}
.container .title-hint {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  font-size: 25rpx;
  color: orangered;
}
.container .type_chose {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
}
.container .type_chose .chose-title {
  font-weight: 800;
  padding-bottom: 20rpx;
}
.container .type_chose .type_btn_group .radio {
  padding-left: 50rpx;
  font-size: 28rpx;
}
.container .type_chose .type-hint {
  font-size: 25rpx;
  margin-top: 20rpx;
  color: orangered;
}
.container .prod-list .item {
  background: #fff;
  display: flex;
  align-items: center;
  padding: 20rpx;
}
.container .prod-list .item .prod-info {
  display: flex;
  margin-left: 20rpx;
}
.container .prod-list .item .prod-info .pic {
  position: relative;
  text-align: center;
  width: 150rpx;
  height: 150rpx;
}
.container .prod-list .item .prod-info .pic image {
  max-width: 100%;
  max-height: 100%;
  border-radius: 8rpx;
  vertical-align: middle;
}
.container .prod-list .item .prod-info .pic .prod-status {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  font-size: 25rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  border-radius: 8rpx;
}
.container .prod-list .item .prod-info .opt {
  font-size: 28rpx;
  line-height: 180%;
  margin-left: 30rpx;
}
.container .prod-list .item .prod-info .opt .properties {
  color: grey;
}
.container .prod-list .item .prod-info .opt .properties .size {
  margin-left: 30rpx;
}
.container .prod-list .item .prod-info .opt .price-count .price-symbol {
  margin-left: 30rpx;
}
.container .prod-list .item .prod-info .opt .prod-hint {
  font-size: 25rpx;
  color: orangered;
}
.container .prod-list .spacer {
  width: 100%;
  height: 500rpx;
}
.container .next-step {
  position: absolute;
  bottom: 0;
  width: 100%;
}

