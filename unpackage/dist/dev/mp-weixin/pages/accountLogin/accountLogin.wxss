
page {
  background: url("https://vkceyugu.cdn.bspapp.com/VKCEYUGU-weitao/50c93d50-a594-11ea-b997-9918a5dda011.png")
    no-repeat center / 100% 100%;
}
.content {
  margin-top: 200rpx;
}
.content .logo {
  justify-content: center;
}
.content .logo image {
  width: 128rpx;
  height: 128rpx;
  border-radius: 64rpx;
}
.content .name {
  margin-top: 20rpx;
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  text-align: center;
}
.content .summary {
  justify-content: center;
  margin-top: 40rpx;
  margin-bottom: 60rpx;
  padding: 0 54rpx;
  color: #999;
  text-align: center;
  line-height: 48rpx;
  font-size: 28rpx;
}
.content .summary text {
  width: 100%;
}
.content .btn {
  padding: 0 150rpx;
}
.content .btn button {
  font-size: 30rpx;
}

